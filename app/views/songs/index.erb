
<% @songs.each do |song| %>
  <div class="song-container">
    <div class="song-info">
      <em><%= song.author %></em>:
      <a href="<%= song.url %>" target="_blank"><%= song.title %></a>
    </div>
    <div class="votes">
      <a href="/songs/<%= song.id %>/upvote">
        <i class="fa fa-angle-up"></i>
      </a><br>
      <p class="vote-count">
        0
      </p>
      <a href="/songs/<%= song.id %>/downvote">
        <i class="fa fa-angle-down"></i>
      </a>
    </div>
  </div>
<% end %>